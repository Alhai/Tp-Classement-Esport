<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:rankingEsport.Client.Pages"
       x:Class="rankingEsport.AppShell"
       FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" Route="HomePage">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Player" Route="PlayerPage">
        <ShellContent ContentTemplate="{DataTemplate pages:PlayerPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Game" Route="GamePage">
        <ShellContent ContentTemplate="{DataTemplate pages:GamePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Ranking" Route="RankingPage">
        <ShellContent ContentTemplate="{DataTemplate pages:RankingPage}" />
    </FlyoutItem>
</Shell>
